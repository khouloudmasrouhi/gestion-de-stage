{% extends 'base.html.twig' %}

{% block title %}Niveau{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Niveau</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for niveau in niveaux %}
                <tr>
                    <td>{{ niveau.id }}</td>
                    <td>{{ niveau.designation }}</td>
                    <td>
                        <a href="{{ path('niveau_show', {'id': niveau.id}) }}" class="btn btn-primary">voir</a>
                        <a href="{{ path('niveau_edit', {'id': niveau.id}) }}" class="btn btn-secondary">editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('niveau_new') }}" class="btn btn-dark">Ajouter</a>
    </div>
{% endblock %}
