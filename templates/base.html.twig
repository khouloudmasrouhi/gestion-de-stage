<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}IOTA CENTER{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand">IOTA CENTER</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {%if current_menu is defined and current_menu == 'offres'%}active{% endif %}" aria-current="page" href="{{ path('homePage') }}">Accueil</a>
                </li>
                {% if not is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link {%if current_menu is defined and current_menu == 'offres'%}active{% endif %}" aria-current="page" href="{{ path('offres') }}">Offre Stage</a>
                    </li>
                {% endif %}
                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link {%if current_menu is defined and current_menu == 'offres'%}active{% endif %}" aria-current="page" href="{{ path('app_login') }}">Se connecter</a>

                    </li>

                {% else %}
                    <li class="nav-item">
                        <a class="nav-link {%if current_menu is defined and current_menu == 'offres'%}active{% endif %}" aria-current="page" href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('home') }}">Admin</a>
                    </li>
                    
                {% endif %}

            </ul>
        </div>
    </div>
</nav>
<div class="conatiner mt-4">
    {% block body %} {% endblock %}
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

</body>



</html>
