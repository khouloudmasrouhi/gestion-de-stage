{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Type index</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <td>{{ type.id }}</td>
                    <td>{{ type.designation }}</td>
                    <td>
                        <a href="{{ path('type_show', {'id': type.id}) }}" class="btn btn-primary">show</a>
                        <a href="{{ path('type_edit', {'id': type.id}) }}" class="btn btn-secondary">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('type_new') }}" class="btn btn-dark">Create new</a>
    </div>
{% endblock %}
